@page
@model WebApp.Pages.Account.LoginTwoFactorModel
@{
}


<p>
    <h3>Please enter the code from your email:
    </h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MFA.SecurityCode"></label>
            </div>
            <div class="col">
                <input type="text" class="form-control" asp-for="MFA.SecurityCode" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" />
            </div>
            <div class="col">
                <input type="hidden" asp-for="MFA.RememberMe" />
            </div>
        </div>
    </form>
</div>