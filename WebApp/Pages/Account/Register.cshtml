@page
@model WebApp.Pages.Account.RegisterModel
@{
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Register.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Register.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Register.Email"></span>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Register.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Register.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Register.Password"></span>

        </div>
        <div class="form-group">
            <button type="submit">Login</button>
        </div>
    </form>
</div>